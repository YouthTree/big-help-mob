#subscriber-sign-up
  - if request.xhr?
    %h2 Subscribe to our Mailing Lists

  = semantic_form_for @subscriber do |f|

    = f.inputs :subscriber_details do
      = f.input :name
      = f.input :email

    = f.inputs :subscriber_extras do
      = f.input :volunteering_history, :as => :select, :collection => Subscriber  .volunteering_history_options_scope.for_select, :required => false, :label => "How often have you volunteered before?", :include_blank => false

    = f.buttons do
      = f.commit_button 'Subscribe'