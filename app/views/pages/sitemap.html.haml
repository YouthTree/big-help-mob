#sitemap
  %ul#utility-navigation
    %li= link_to "Sign In", sign_in_path
    %li= link_to "Sign Up", new_user_path
    %li= link_to "Sitemap", sitemap_path
    
  %ul#primary-navigation
    %li#site-home= link_to "Home", root_path
    %li
      = link_to "Pages", sitemap_path
      %ul
        - each_listing_page do |title, name|
          %li= link_to title, url_for(name)
    %li
      = link_to "Mission", missions_path
      %ul
        %li= link_to "Next Mission", mission_path(:next)
        - Mission.viewable.all.each do |mission|
          %li= link_to mission.name, mission_path(mission)
          %li= link_to "Join #{mission.name}", join_mission_path(mission)
    %li
      = link_to "Your Account", user_path(:current)
      %ul
        %li= link_to "Sign In", sign_in_path
        %li= link_to "Sign In (Traditional)", sign_in_path(:traditional => true)
        %li= link_to "Sign Up", new_user_path
        %li= link_to "Sign Up (Traditional)", new_user_path(:traditional => true)
        %li= link_to "Password Reset", new_password_reset_path
      
  