- semantic_form_for @user do |form|
  
  - form.inputs :name => "Your Account Details" do
    = form.input :login
    = form.input :email
    = form.input :password
    = form.input :password_confirmation
    
  - form.inputs :name => "Tell us about you" do
    = form.input :display_name, :hint => "This is shown to other users on the site"
    = form.input :first_name
    = form.input :last_name
    = form.input :phone, :hint => "We respect your privacy - this number will never be given out or shared."
    
    
  - form.buttons do
    = form.commit_button