!!! 5
%html{:lang => "en", :dir => "ltr"}
  %head
    %title Big Help Mob - Admin Area
    
    / Stylesheets
    = stylesheet_link_tag 'grid.css', :media => 'screen, projection'
    = stylesheet_link_tag 'text.css', :media => 'screen, projection'
    = stylesheet_link_tag "bhm-admin.css"
    
    / Javascripts
    /[if IE]
      = javascript_include_tag "http://html5shiv.googlecode.com/svn/trunk/html5.js"
    = javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.4.1/jquery.min.js", "rails", "bhm/bhm"
    = csrf_meta_tag
    = yield :extra_head
    
  %body
    #container
      %header= render :partial => 'admin/shared/header'
      = flash_messages :alert, :notice
      
      %section#content-container
        %section#content= yield
        %section#sidebar
          - sidebar_content = yield :sidebar
          = sidebar_content.present? ? sidebar_content : render(:partial => 'admin/shared/sidebar')
    
      %footer
        = render :partial => 'admin/shared/footer'
        = yield :page_bottom