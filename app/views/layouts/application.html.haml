!!! 5
%html{:lang => "en", :dir => "ltr"}
  %head
    %title== #{page_title} - Big Help Mob
    = raw include_stylesheets(:base, :media => 'screen, projection')
    /[if IE]
      %script{:src => uri2ssl("html5shiv.googlecode.com/svn/trunk/html5.js")}
    = raw include_javascripts(:base)
    /[if IE 6]
      = raw include_javascripts(:ie6)
    - if params[:bgcolor] == "1"
      = raw include_stylesheets(:bgcolor)
      = raw include_javascripts(:bgcolor)
    = csrf_meta_tag
    = yield :extra_head
  %body
    = flash_messages :alert, :notice
    #container
      %header= render :partial => 'shared/header'
      
      %article#content= yield
    
      %footer= render :partial => 'shared/footer'
      = yield :page_bottom
      = google_analytics
      
    = uuid_marker_comment